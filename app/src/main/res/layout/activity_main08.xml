<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/a8"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#41FF5722">

        <!-- Back Arrow -->

        <!-- Profile Image -->

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="18dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="76dp"
            android:src="@drawable/back"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_background"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <!-- Profile Label -->
        <TextView
            android:id="@+id/profileLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilePic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/profile"
            android:textColor="@color/pink_accent_dark"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- User Info -->
    <LinearLayout
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yomali_senevirathne"
            android:textColor="#C2185B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yomalisene_gmail_com"
            android:textColor="#9E312E2E"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Menu Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/notifications"
                app:tint="#C2185B" />

            <TextView
                android:id="@+id/noti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/notifications"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/f_arrow1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_forward"
                app:tint="#888888" />
        </LinearLayout>

        <!-- Personal -->
        <LinearLayout
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/personal"
                app:tint="#C2185B" />

            <TextView
                android:id="@+id/per"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/personal"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/f_arrow4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_forward"
                app:tint="#888888"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <!-- Calendar -->
        <LinearLayout
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/calander"
                app:tint="#C2185B" />

            <TextView
                android:id="@+id/cal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/calendar"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/f_arrow4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_forward"
                app:tint="#888888"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <!-- General -->
        <LinearLayout
            android:id="@+id/a5"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/general"
                app:tint="#C2185B" />

            <TextView
                android:id="@+id/gen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/general"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/f_arrow4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_forward"
                app:tint="#888888"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <!-- Help -->
        <LinearLayout
            android:id="@+id/a6"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/help"
                app:tint="#C2185B" />

            <TextView
                android:id="@+id/help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/help"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/f_arrow5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_forward"
                app:tint="#888888" />
        </LinearLayout>

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/a7"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logout"
                app:tint="#C2185B" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/log_out"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/f_arrow6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_forward"
                app:tint="#888888" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
